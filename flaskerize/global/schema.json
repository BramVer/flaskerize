{
  "options": [
    {
      "arg": "--bundle",
      "aliases": ["-b"],
      "type": "str",
      "nargs": "+",
      "help": "Target static site to host within Flask"
    },
    {
      "arg": "--generate",
      "aliases": ["-g"],
      "type": "str",
      "nargs": "+",
      "help": "Generate a new resource"
    },
    {
      "arg": "--force",
      "aliases": ["-f"],
      "action": "store_true",
      "help": "Ignore safety checks, such as checking that target Flask app is a *.py"
    },
    {
      "arg": "--dry-run",
      "action": "store_true",
      "help": "Dry run -- don't actually create any files."
    }
  ]
}
